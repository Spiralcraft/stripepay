<dtask:Session
  xmlns:dtask="class:/spiralcraft/data/task/"
  xmlns:task="class:/spiralcraft/task/"
  xmlns:bizm="class:/spiralcraft/biz/meta/"
  xmlns:j="class:/java/lang"
  >
  <transactional>true
  </transactional>

  <contextX>
    { cardToken:[@j:String]
    , amount:[@bizm:Money]
    }
  </contextX>
  
  <sequence>
    <task:Eval>
      <x>@log("Charging "+amount+" to "+cardToken)
      </x>
    </task:Eval>
  </sequence>
</dtask:Session>